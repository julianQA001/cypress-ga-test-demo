{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "./dist/",
        "lib": [
            "es2016",
            "es2017",
            "dom",
            "esnext.asynciterable",
            "esnext.array"
        ],
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node" /* Specify module resolution strategy: 'node' (Node.js) or 'classic' (TypeScript pre-1.6). */,
        "types": ["cypress", "node"]
    },
    "include": ["**/*.ts", "cypress/**/**/*.cy.ts", ] ,
    "exclude": ["dist", "node_modules", "!node_modules/@types"]
}
